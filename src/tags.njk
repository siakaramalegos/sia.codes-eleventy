---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
renderData:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---

<div class="content">
  <section>
    <h1>Tagged “{{ tag }}”</h1>

    {% set archivelist = collections[ tag ] %}
    {% include "archivelist.njk" %}
  </section>

  <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
</div>
