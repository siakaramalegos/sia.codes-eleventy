---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
renderData:
  title: Writing by Sia tagged "{{ tag }}"
  pageTitle: Writing by Sia tagged "{{ tag }}"
  description: Learn more about {{ tag }} with posts written by Sia Karamalegos, performance engineer and web developer.
permalink: /tags/{{ tag }}/
---

<div class="content">
  <section>
    <h1>Tagged “{{ tag }}”</h1>

    {% set archivelist = collections[ tag ] | mergeExternalTaggedPosts(external_writing, tag) %}
    {% include "archivelist.njk" %}
  </section>

  <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
</div>
